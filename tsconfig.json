{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": "./",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "esnext",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "app"]
}
